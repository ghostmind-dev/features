{
    "name": "features",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "PROJECT_DIR": "${env:HOME}${env:USERPROFILE}/projects/container/features"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/ghostmind-dev/features/extensions:latest": {},
        "ghcr.io/ghostmind-dev/features/themes:latest": {},
        "ghcr.io/ghostmind-dev/features/init:latest": {
            "resetLive": true
        },
        "ghcr.io/ghostmind-dev/features/settings:latest": {},
        "ghcr.io/ghostmind-dev/features/zsh:latest": {
            "theme": "codespaces"
        }
    },
    "postStartCommand": "deno run -A -r jsr:@ghostmind/init",
    "postCreateCommand": "deno run -A /usr/local/share/post-create.ts",
    "remoteEnv": {
        "SRC": "${containerWorkspaceFolder}",
        "LOCALHOST_SRC": "${env:HOME}${env:USERPROFILE}/projects/container/features",
        "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
        "VAULT_ROOT_TOKEN": "${localEnv:VAULT_ROOT_TOKEN}",
        "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
    },
    "containerEnv": {},
    "mounts": [
        "source=terminal-history-features,target=/commandhistory,type=volume",
        "source=${env:HOME}${env:USERPROFILE}/projects,target=/Users/francoisseguin/projects,type=bind",
        "source=${env:HOME}${env:USERPROFILE}/.cursor,target=/home/vscode/.cursor,type=bind"
    ],
    "runArgs": [
        "--cap-add=CAP_IPC_LOCK",
        "--cap-add=NET_ADMIN",
        "--name=feature",
        "--privileged"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ghostmind.hide-unhide@0.0.12"
            ]
        }
    }
}