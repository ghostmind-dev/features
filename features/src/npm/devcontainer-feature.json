{
    "id": "npm",
    "version": "1.0.3",
    "name": "NPM Global Packages",
    "description": "Installs specified global NPM packages",
    "documentationURL": "https://docs.npmjs.com/cli/v10/configuring-npm/npmrc",
    "options": {
        "packages": {
            "type": "string",
            "default": "",
            "description": "Comma-separated list of global packages to install"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils:2",
        "ghcr.io/devcontainers/features/node:1"
    ]
}