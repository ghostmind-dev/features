{
    "id": "config",
    "version": "1.0.2",
    "name": "Config",
    "description": "Configure VS Code settings for development environment",
    "documentationURL": "https://github.com/ghostmind-dev/features/tree/main/features/src/config",
    "options": {
        "enableFeature": {
            "type": "boolean",
            "default": true,
            "description": "Enable the config feature to set VS Code settings (default: true)"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "files.autoSave": "off",
                "editor.formatOnSave": true,
                "terminal.integrated.defaultProfile.linux": "zsh",
                "prettier.singleQuote": true,
                "files.associations": {
                    "*.json": "jsonc",
                    "**/meta.json": "json"
                },
                "deno.enable": true,
                "deno.lint": true,
                "deno.cacheOnSave": true,
                "deno.path": "/deno/bin/deno",
                "deno.cache": "/deno/.cache",
                "deno.config": "/home/vscode/deno.json",
                "json.schemas": [
                    {
                        "fileMatch": [
                            "**/meta.json"
                        ],
                        "url": "https://raw.githubusercontent.com/ghostmind-dev/config/main/config/meta/schema.json"
                    }
                ],
                "json.validate.enable": true,
                "json.schemaDownload.enable": true,
                "[dockerfile]": {
                    "editor.formatOnSave": false
                },
                "shellformat.effectLanguages": [
                    "dotenv",
                    "gitignore"
                ],
                "material-icon-theme.folders.associations": {
                    ".cursor": "resource",
                    ".devcontainer": "base",
                    "app": "app",
                    "docker": "docker",
                    "infra": "terraform",
                    "local": "mappings"
                },
                "material-icon-theme.files.associations": {
                    "**.env.base": "settings",
                    "**.env.dev": "settings",
                    "**.env.local": "settings",
                    "**.env.prod": "settings"
                },
                "material-icon-theme.files.customClones": [
                    {
                        "name": "settings-template",
                        "base": "settings",
                        "color": "green-400",
                        "fileNames": [
                            ".env.template"
                        ]
                    }
                ],
                "explorer.decorations.colors": true,
                "explorer.decorations.badges": true,
                "git.decorations.enabled": true,
                "workbench.colorCustomizations": {
                    "gitDecoration.ignoredResourceForeground": "#d8bf20"
                }
            }
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils:2"
    ]
}