                "packages": "typescript prettier"
            }
        }
    },
    "test_all_options": {
        "image": "mcr.microsoft.com/devcontainers/base:debian-11",
        "features": {
            "ghcr.io/devcontainers/features/common-utils:2": {},
            "ghcr.io/devcontainers/features/node:1": {},
            "npm": {
                "installDefaultPackages": true,
